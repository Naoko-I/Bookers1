<%= flash[:notice] %>
 <div class="flash"></div>

<strong><h2>Books</h2></strong>

<table>
<thead>
 <tr>
  <th>Title</th>
  <th>Body</th>
 </tr>
</thead>
 
 <tbody>
 <% @books.each do |book| %>
 <td><%= book.title %></td>
 <td><%= book.body %></td>
 <td>
 	<%= link_to "show", book_path(book.id) %>
    <%= link_to "edit", edit_book_path(book.id) %>
    <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
 </td>
 </tr>
<% end %>
</tbody>   
</table>

<strong><h3>New book</h3></strong>
<% if @book.errors.any? %>
   <strong><p>2 errors prohibited this book from being saved:</p></strong>
    <ul>
     <li>Title can't be blank</li>
     <li>Body can't be blanks</li>
    </ul>
<% end %>
<%= form_for(@book) do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <P><%= f.submit 'Create Book' %></P>

 

<% end %>
